#!/bin/sh

cd $(dirname "$0")

. ./params.sh

phitem 1 Return "$CHAN_ROOT"
phline
phinfo 'Archived threads:'

for thread in $(ls -td [0-9]* 2>/dev/null)
do
	cd $thread

	stamp=$(cat stamp)

	if [ -e archive ]
	then
		phitem 1 "[thread] $(cat gophertag) $(date -d @$stamp +"$DATE_FORMAT")" "$CHAN_ROOT/$thread"
	fi

	cd ..
done
