#!/bin/bash

cd "${0%/*}"

thread=$(basename $(pwd))
thread="${thread#sticky_*}"

threadstamp="${thread%_*}"
threadno="${thread#*_}"

if [[ ! -e "../params.sh" ]]
then
	exit
fi

source ../params.sh

printf "1Return	$CHAN_ROOT	$SERVER_HOST	$SERVER_PORT\r\n"
printf "i	fake	(NULL)	0\r\n"

printf "i##$threadno $(date -d @$threadstamp +"$DATE_FORMAT")	fake	(NULL)	0\r\n"
printf "i_____________________________________________________________________	fake	(NULL)	0\r\n"
printf "i$(cat gophertag)	fake	(NULL)	0\r\n"
printf "i_____________________________________________________________________	fake	(NULL)	0\r\n"
printf "i	fake	(NULL)	0\r\n"

if [[ $(ls [0-9]* 2>/dev/null | wc -l) -eq 0 ]]
then
	printf "iThis is a new thread. Create an opening post using Reply.	fake	(NULL)	0\r\n"

	if [[ "$SHOW_EMPTY_THREADS" != "y" ]]
	then
		printf "iNew threads will not appear on the main menu until they have an	fake	(NULL)	0\r\n"
		printf "iopening post!	fake	(NULL)	0\r\n"
	fi

	printf "i	fake	(NULL)	0\r\n"
fi

pad=$(printf "_%.0s" {1..70})
i=1

for file in $(ls -v [0-9]* 2>/dev/null)
do
	stamp="${file%_*}"
	no="${file#*_}"
	posted=$(date -d @$stamp +"$DATE_FORMAT")

	header=$(printf "__[%s #%d]%s" "$posted" $no "$pad" | cut -c1-69)
	printf "i$header	fake	(NULL)	0\r\n"

	saveifs="$IFS"
	IFS=''
	while read line
	do
		if echo "$line" | grep -q "	"
		then
			printf "$line\r\n"
		else
			while read fmtline
			do
				printf "i%s	fake	(NULL)	0\r\n" "$fmtline"
			done < <(echo "$line" | fmt -69 | fold -w 69)
		fi
	done < $file
	IFS="$saveifs"

	printf "i	fake	(NULL)	0\r\n"

	i=$((i+1))
done

printf "7Reply	$REQUEST/post	$SERVER_HOST	$SERVER_PORT\r\n"
printf "7Reply with link	$REQUEST/postlink	$SERVER_HOST	$SERVER_PORT\r\n"
if [ $MAX_UPLOAD -gt 0 ]
then
	printf "7Upload image/file from URL (max $(($MAX_UPLOAD / 1000)) kB)	$REQUEST/postfile	$SERVER_HOST	$SERVER_PORT\r\n"
fi
printf "7Reply with spoiler	$REQUEST/postsplr	$SERVER_HOST	$SERVER_PORT\r\n"
